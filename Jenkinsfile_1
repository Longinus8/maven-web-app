pipeline{
    agent any 
    tools {
        Terraform 'terraform1.2.2'
    }
    stages{
        stage('initialize'){
            steps{
                sh 'terraform init'
            }
        }
        stage('validation'){
            steps{
                sh 'terraform validate'
            }
        }
        stage('plan'){
            steps{
                sh 'terraform plan'
            }
        }
        stage('apply'){
            steps{
                sh 'terraform apply -auto-approve'
            }
        }
    }
}